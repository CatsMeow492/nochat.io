FROM golang:1.20-alpine AS development

# Install build dependencies
RUN apk add --no-cache git make

# Set working directory
WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Build the application
RUN go build -o /app/bin/server ./cmd/server

# Expose port
EXPOSE 8080

# Run the application
CMD ["/app/bin/server"]
