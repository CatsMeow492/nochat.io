{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "NoChat",
  "version": "1.0.13",
  "identifier": "io.nochat.desktop",
  "build": {
    "beforeBuildCommand": "npm run build:frontend",
    "beforeDevCommand": "npm run build:frontend",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "NoChat",
        "width": 1200,
        "height": 800,
        "minWidth": 400,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://nochat-server.fly.dev wss://nochat-server.fly.dev https://releases.nochat.io https://*.google.com https://*.github.com https://*.apple.com https://*.facebook.com; img-src 'self' data: https:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval'"
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "macOS": {
      "entitlements": "entitlements.plist",
      "exceptionDomain": null,
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "signingIdentity": "Developer ID Application: TAYLOR EDWARD,CLARK MOHNEY (5CA5T4YZ48)",
      "providerShortName": "5CA5T4YZ48"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com"
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "deb": {
        "depends": []
      }
    }
  },
  "plugins": {
    "deep-link": {
      "mobile": [],
      "desktop": {
        "schemes": ["nochat"]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEI0QzA1QzEyNkEwNjZCOUMKUldTY2F3WnFFbHpBdEhJdlY5NER1akl4N1gzU2IzODRSVnptWkYxQ09aZEcvSFhjUmdFNThURWUK",
      "endpoints": [
        "https://releases.nochat.io/desktop/{{target}}/{{arch}}/{{current_version}}"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
