{
  "$schema": "https://schemas.tauri.app/capabilities/2.0",
  "identifier": "default",
  "description": "Default capabilities for NoChat Desktop",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "notification:default",
    "notification:allow-is-permission-granted",
    "notification:allow-request-permission",
    "notification:allow-notify",
    "opener:default",
    "opener:allow-open-url",
    "deep-link:default",
    "updater:default",
    "updater:allow-check",
    "updater:allow-download-and-install"
  ]
}
